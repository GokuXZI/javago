#!/usr/bin/env bash

RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
CYAN='\033[1;36m'
NC='\033[0m'

print_help() {
echo "JavaGo - Java compiler & runner"
echo ""
echo "Usage:"
echo "  javago <file.java>"
echo ""
echo "Options:"
echo "  --help        Show help"
echo "  --version     Show version"
}

# version
if [[ "$1" == "--version" ]]; then
echo "JavaGo version 1.0.0"
exit
fi

# help
if [[ "$1" == "--help" || -z "$1" ]]; then
print_help
exit
fi

FILE="$1"

# file exists?
if [ ! -f "$FILE" ]; then
echo -e "${RED}Error: File not found${NC}"
exit 1
fi

# extension check
if [[ "$FILE" != *.java ]]; then
echo -e "${RED}Error: Not a .java file${NC}"
exit 1
fi

# check java
if ! command -v javac >/dev/null 2>&1; then
echo -e "${YELLOW}Installing OpenJDK...${NC}"
pkg install openjdk -y
fi

echo -e "${CYAN}Compiling...${NC}"

javac "$FILE" 2> compile.log

if [ $? -ne 0 ]; then
echo -e "${RED}Compilation Error:${NC}"
cat compile.log

if grep -q ";" compile.log; then
echo -e "${YELLOW}Tip: Missing semicolon ';'${NC}"
fi

rm compile.log
exit 1
fi

CLASS=$(basename "$FILE" .java)

echo -e "${GREEN}Compilation successful!${NC}"
echo -e "${CYAN}Running program...${NC}"

java "$CLASS"

echo -e "${GREEN}Finished.${NC}"
